{
    "name": "semperton/routing",
    "description": "The Semperton Routing component.",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Semperton\\Routing\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Semperton\\Routing\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit tests",
        "check": "psalm --no-cache",
        "bench": "phpbench run benchmark --report=default"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.7",
        "phpbench/phpbench": "^1.0"
    },
    "require": {
        "php": ">= 7.4",
        "ext-ctype": "*",
        "psr/http-message": "^1.0"
    }
}
